<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.control.ControlAbout">

    <HBox VBox.vgrow="ALWAYS">

        <TreeView fx:id="content"/>
        <Separator/>
        <WebView fx:id="text" HBox.hgrow="ALWAYS"/>

    </HBox>
    <HBox VBox.vgrow="SOMETIMES">

        <Button text="Zoom In" onAction="#btnZoomIn"/>
        <Separator/>
        <Button text="Zoom Out" onAction="#btnZoomOut"/>
        <Separator/>
        <Button text="Close" onAction="#btnCloseClicked"/>

    </HBox>


</VBox>
